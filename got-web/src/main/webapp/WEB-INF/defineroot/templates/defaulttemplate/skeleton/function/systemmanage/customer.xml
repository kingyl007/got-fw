<?xml version="1.0" encoding="UTF-8"?>
<function xmlns="http://www.got-fw.com/schema/function"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.got-fw.com/schema/function http://www.got-fw.com/schema/function/function-1.0.xsd"
	ref="default_function" title="账号" defaultView="grid" bizService="customerBizService">
	<table name="CUSTOMER" customerIdCol="PARENT_ID" />
	<joins>
		<join name="CUSTOMER_ADMIN" type="LEFT" alias="CA"
			joinConditions="MAIN.CUSTOMER_ID=CA.CUSTOMER_ID" sortIndex="10">
		</join>
		<join name="USERS" type="LEFT" alias="U" joinConditions="CA.ADMIN_ID=U.USER_ID"
			sortIndex="20">
			<columns>
				<column field="USER_ID" toUser="false" toView="true" />
				<column field="USER_ACCOUNT" label="登录账号" visible="true"
					sortIndex="40" toUser="true" editable="true" required="true"
					unique="G" />
			</columns>
		</join>
	</joins>
	<columns visible="false" toUser="false">
		<column id="CUSTOMER_ID" autoKey="CUSTOMER_SEQ" />
		<column id="PARENT_ID" label="上级账号" visible="false" type="TREE"
			sortIndex="20">
			<valueref function="customer" view="tree" />
		</column>
		<column id="CUSTOMER_NAME" label="名称" visible="true" toUser="true"
			unique="G" required="true" sortIndex="10" />
		<column id="ADDRESS" sortIndex="60" label="地址" visible="true"
			toUser="true" />
		<column id="LINKMAN" sortIndex="80" label="联系人" visible="true"
			toUser="true" />
		<column id="TELEPHONE" sortIndex="90" label="电话" visible="true"
			toUser="true" />
		<column id="FAX" sortIndex="100" label="传真" visible="true"
			toUser="true" />
		<column id="MEMO" sortIndex="140" label="备注" visible="true"
			toUser="true" />
	</columns>
	<views>
		<grid>
			<columns>
			</columns>
			<actions>
			</actions>
			<argument sortName="CUSTOMER_ID" sortOrder="DESC" />
		</grid>
		<tree>
			<argument treeIdField="CUSTOMER_ID" treeParentIdField="PARENT_ID"
				treeLabelField="CUSTOMER_NAME" treeClosedIcon="closedGroupCustomer"
				treeOpenedIcon="openedGroupCustomer" treeLeafIcon="normalCustomer"
				treeCanAddRoot="false" />
		</tree>
		<create>
			<columns>
				<column id="PARENT_ID" visible="true" toUser="true" />
				<column id="USER_ROLE" label="角色" visible="true" editable="true"
					fromDb="false" sortIndex="50" toDb="false">
					<valueref function="role" view="select" label="ROLE_NAME"
						value="ROLE_ID" />
				</column>
			</columns>
			<argument />
		</create>
		<edit>
			<columns>
				<column id="PARENT_ID" visible="true" toUser="true" />
				<column field="USER_ACCOUNT" editable="false" />
				<column id="USER_ROLE" label="角色" visible="true" editable="true"
					fromDb="false" sortIndex="50" toDb="false">
					<valueref function="role" view="select" label="ROLE_NAME"
						value="ROLE_ID" />
				</column>
			</columns>
		</edit>
	</views>
</function>